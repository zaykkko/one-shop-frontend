{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["esnext", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@root/*": ["*"],
      "@shared/styles.scss": ["./shared/styles/shared.scss"],
      "@shared/style/*": ["./shared/styles/*"],
      "@shared/component/*": ["./shared/components/*"],
      "@shared/schema/*": ["./shared/schemas/*"],
      "@util/*": ["./utils/react/*"],
      "@sprite/*": ["./sprites/*"],
      "@context/*": ["./states/contexts/*"],
      "@reducer/*": ["./states/reducers/*"]
    },
    "types": ["node"],
    "typeRoots": ["node_modules/@types", "./types"],
    "removeComments": false,
    "sourceMap": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "noUnusedLocals": true
  },
  "exclude": ["node_modules", "static", "build"],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "types",
    "webpack.production.ts",
    "webpack.development.ts"
  ]
}
